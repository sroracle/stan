server="irc.example.net"
port="6697"
export STAN_CFG="stan.cfg"

cat \
	stan/constants.awk \
	stan/log.awk \
	stan/util.awk \
	stan/config.awk \
	stan/main.awk \
	stan/irc.awk \
> stan.awk

cat \
	modules/quotes.awk \
	modules/ignore.awk \
	modules/admin.awk \
	modules/balefire.awk \
	modules/cocain.awk \
	modules/h.awk \
	modules/joe.awk \
	modules/nsa.awk \
	modules/police.awk \
	modules/poll.awk \
	modules/status.awk \
	modules/uno.awk \
	modules/uptime.awk \
	modules/help.awk \
	modules/battle.awk \
	modules/chat.awk \
>> stan.awk

export LC_ALL="C"
export CADIR=/etc/ssl/certs
awk="$(readlink -f "$(command -v awk)")"
case "$awk" in
*mawk*) interactive="-W interactive";;
esac
stan_argv="$awk $interactive -f stan.awk"

if [ -z "$*" ]; then
	exec s6-tlsclient -- "$server" "$port" fdmove 0 6 fdmove 1 7 $stan_argv
else
	exec $stan_argv "$@"
fi
